{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off", // Error: 'Image' is defined but never used.  @typescript-eslint/no-unused-vars
    "@typescript-eslint/no-empty-object-type": "off", // Error: An interface declaring no members is equivalent to its supertype.
    "@next/next/no-img-element": "off", // Warning: Using `<img>` could result in slower LCP and higher bandwidth. Consider using `<Image />` from `next/image` to automatically optimize images.
    "@typescript-eslint/no-explicit-any": "off", // Error: Unexpected any. Specify a different type.
    "react/no-unescaped-entities": "off"
  }
}
